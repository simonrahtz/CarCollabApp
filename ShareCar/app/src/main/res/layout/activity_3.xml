<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.Activity3"
   android:gravity="center_horizontal">

    <ImageView
        android:id="@+id/iv_car"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/ic_car" />
    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_car"
        android:layout_marginStart="12dp"
        android:text="Please upload car photos"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView1"
        android:layout_marginStart="12dp"
        android:layout_toRightOf="@id/iv_car"
        android:background="@drawable/shape_text_bg"
        android:gravity="center"
        android:padding="12dp"
        android:text="file"
        android:textColor="#3949AB"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text_vin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_car"
        android:text="VIN: "
        android:textColor="#3949AB"
        android:gravity="center"
        android:layout_alignBottom="@id/et_vin"/>
    <EditText
        android:id="@+id/et_vin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/text_vin"
        android:layout_below="@id/iv_car"
        android:text="111111111111"/>

    <TextView
        android:id="@+id/text_brand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_vin"
        android:text="Car brand: "
        android:textColor="#3949AB"
        android:gravity="center"
        android:layout_alignBottom="@id/et_brand"/>

    <EditText
        android:id="@+id/et_brand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/text_brand"
        android:layout_below="@id/text_vin"
        android:text="11111111"/>


    <TextView
        android:id="@+id/btn_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_brand"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/shape_text_bg"
        android:gravity="center"
        android:padding="12dp"
        android:text="Confirm information"
        android:textColor="#3949AB"
        android:textSize="18sp"
        android:textStyle="bold" />
</RelativeLayout>