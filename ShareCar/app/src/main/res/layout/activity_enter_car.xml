<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.car.EnterCarActivity"
    android:gravity="center_horizontal"
    android:padding="20dp"
    >

    <ImageView
        android:id="@+id/iv_car"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/ic_car"
        />
    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_car"
        android:layout_marginStart="12dp"
        android:text="Please upload car photos"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView1"
        android:layout_marginStart="12dp"
        android:layout_toRightOf="@id/iv_car"
        android:background="@drawable/shape_text_bg"
        android:gravity="center"
        android:padding="12dp"
        android:text="file"
        android:textColor="#3949AB"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text_vin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_car"
        android:layout_alignBottom="@id/et_vin"
        android:gravity="center"
        android:text="VIN: "
        android:textColor="#3949AB" />

    <EditText
        android:id="@+id/et_vin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_car"
        android:layout_toRightOf="@id/text_vin"
        android:minHeight="48dp"
        android:text="111111111111" />

    <TextView
        android:id="@+id/text_brand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_vin"
        android:layout_alignBottom="@id/et_brand"
        android:gravity="center"
        android:text="Car insurance status: "
        android:textColor="#3949AB"/>

    <EditText
        android:id="@+id/et_brand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_vin"
        android:layout_toRightOf="@id/text_brand"
        android:minHeight="48dp"
        android:text="11111111" />

    <TextView
        android:id="@+id/text_company"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_brand"
        android:layout_alignBottom="@id/et_company"
        android:gravity="center"
        android:text="Insurance company: "
        android:textColor="#3949AB"/>

    <EditText
        android:id="@+id/et_company"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_brand"
        android:layout_toRightOf="@id/text_company"
        android:minHeight="48dp"
        android:text="111111111111" />

    <TextView
        android:id="@+id/text_expire"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_company"
        android:layout_alignBottom="@id/et_expire"
        android:gravity="center"
        android:text="Insurance expire date: "
        android:textColor="#3949AB" />

    <EditText
        android:id="@+id/et_expire"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_company"
        android:layout_toRightOf="@id/text_expire"
        android:minHeight="48dp"
        android:text="111111111111" />


    <Button
        android:id="@+id/btn_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_expire"

        android:gravity="center"
        android:padding="12dp"
        android:text="Add Car" />
</RelativeLayout>